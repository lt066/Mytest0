<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/black">
    <ImageView 
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_50px"
        android:layout_marginRight="@dimen/_50px"
        android:layout_marginTop="@dimen/_50px"
        android:layout_marginBottom="@dimen/_50px"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:id="@+id/switcher">
        
    </ImageView>
    
    <com.example.widget.MyHorizontalScrollView android:layout_width="match_parent"
        android:id="@+id/id_horizontalScrollView" 
        android:layout_height="@dimen/_320px"
        android:layout_marginBottom="@dimen/_10px"

        >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gallery"
            android:orientation="horizontal"
            android:showDividers="end"
            android:divider="@drawable/divider"
            android:dividerHeight="5dp">
            
        </LinearLayout>
        </com.example.widget.MyHorizontalScrollView>
    

</LinearLayout>
